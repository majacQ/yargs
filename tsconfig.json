{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": false,
    "target": "es2017",
    "moduleResolution": "node",
    "module": "es2015",
    "removeComments": true
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "lib/cjs.ts",
    "lib/platform-shims/*.ts"
  ]
}
